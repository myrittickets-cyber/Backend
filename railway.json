{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install"
    },
    "deploy": {
        "startCommand": "node scripts/initDatabase.js && node server.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "healthcheck": {
        "path": "/api/stores",
        "timeout": 30
    }
}